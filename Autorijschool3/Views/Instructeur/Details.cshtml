@model Autorijschool3.Models.Instructeur

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Instructeur</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Familienaam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Familienaam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Voornaam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Voornaam)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Adres)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adres)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gemeente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gemeente)
        </dd>

        <dt>
            Rijbewijzen
        </dt>
        <dd>

            <table class="table">
                <tr>
                    <th>Naam</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.TypeRijbewijzenLijst)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Naam)
                        </td>
                        <td>
                            <!-- model id is van de instr, item id het rijbewijs uit de lijst-->
                            @Html.ActionLink("Verwijder Rijbewijs", "VerwijderRijbewijs", new { id = Model.ID, idRijbewijs = item.ID }) |
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
